doctype html
//
  A booking webpage for Travel Experts
  * Author: Harry Willis
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    
    script(type='text/javascript' src='/scripts/travel_scripts.js')
    
    link(rel='stylesheet' type='text/css' href='css/index.css')
    link(rel='stylesheet' type='text/css' href='css/form.css')

    title Booking

    div
        img#logo(src='album/00.png' alt='')
        p.header Book a Package
    .Nav
        nav#nav
            li
                a(href='/') Travel Experts
            li
                a(href='vacation') Vacation Package
            li
                a(href='register') Register
            li
                a(href='contact') Contact
            li
                a(href='logout' style='visibility: #{showOut}') #{logOut}

div#bookForm
    form#book(action='/book' method='POST')
        // booking info
        label(for='pkgOpt') Choose your package: *
        select.pkgOpt(name='pkgOpt')
            option(value='default') Choose one
            option(value='carrNewYr') Carribean New Year
            option(value='polyPar') Polynesian Paradise
            option(value='asianExp') Asian Expedition
            option(value='euroVac') European Vacation
        br

        label(for='numTrav') How many of travellers? *
        select.numTrav(name='numTrav' style='display:block;')
            option(value='default') Choose one
            option(value=1) 1
            option(value=2) 2
            option(value=3) 3
            option(value=4) 4
        br
        
        label(for='tripType') What&apos;s the purpose of your trip? *
        select.tripType(name='tripType' style='display:block;')
            option(value='default') Choose one
            option(value='B') Business
            option(value='G') Group
            option(value='L') Leisure
        br

        input#bookBtn(type='submit' value='Book Now')

p #{errFind}